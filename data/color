# Backup VGA 4-bit colors
BLACK=$'\033[30m'
BG_BLACK=$'\033[40m'
RED=$'\033[31m'
BG_RED=$'\033[41m'
GREEN=$'\033[32m'
BG_GREEN=$'\033[42m'
YELLOW=$'\033[33m'
BG_YELLOW=$'\033[43m'
BLUE=$'\033[34m'
BG_YELLOW=$'\033[44m'
MAGENTA=$'\033[35m'
BG_MAGENTA=$'\033[45m'
CYAN=$'\033[36m'
BG_CYAN=$'\033[46m'
WHITE=$'\033[37m'
BG_WHITE=$'\033[47m'

BRIGHT_BLACK=$'\033[90m'
BRIGHT_BG_BLACK=$'\033[100m'
BRIGHT_RED=$'\033[91m'
BRIGHT_BG_RED=$'\033[101m'
BRIGHT_GREEN=$'\033[92m'
BRIGHT_BG_GREEN=$'\033[102m'
BRIGHT_YELLOW=$'\033[93m'
BRIGHT_BG_YELLOW=$'\033[103m'
BRIGHT_BLUE=$'\033[94m'
BRIGHT_BG_YELLOW=$'\033[104m'
BRIGHT_MAGENTA=$'\033[95m'
BRIGHT_BG_MAGENTA=$'\033[105m'
BRIGHT_CYAN=$'\033[96m'
BRIGHT_BG_CYAN=$'\033[106m'
BRIGHT_WHITE=$'\033[97m'
BRIGHT_BG_WHITE=$'\033[107m'

RST=$'\033[0m'
BOLD=$'\033[1m'
ITALIC=$'\033[2m'
UNDERLINE=$'\033[4m'

FULL_COLOR=false
if [[ $TERM != "linux" ]]; then
	FULL_COLOR=true
	COLOR_0=$'\033[38;2;14;14;14m'
	COLOR_1=$'\033[38;2;36;36;36m'
	COLOR_2=$'\033[38;2;64;64;64m'
	COLOR_3=$'\033[38;2;117;117;117m'
	COLOR_4=$'\033[38;2;84;51;190m'
	COLOR_5=$'\033[38;2;230;36;175m'
	COLOR_6=$'\033[38;2;255;122;214m'
	COLOR_7=$'\033[38;2;255;255;255m'
	BG_COLOR_0=$'\033[48;2;14;14;14m'
	BG_COLOR_1=$'\033[48;2;36;36;36m'
	BG_COLOR_2=$'\033[48;2;64;64;64m'
	BG_COLOR_3=$'\033[48;2;117;117;117m'
	BG_COLOR_4=$'\033[48;2;84;51;190m'
	BG_COLOR_5=$'\033[48;2;230;36;175m'
	BG_COLOR_6=$'\033[48;2;255;122;214m'
	BG_COLOR_7=$'\033[48;2;255;255;255m'
else	
	echo 'Using TTY, VGA standard 4-bit colors will be used' >&2
	COLOR_0=$BLACK
	COLOR_1=$BRIGHT_BLACK
	COLOR_2=$WHITE
	COLOR_3=$BRIGHT_WHITE
	COLOR_4=$BRIGHT_BLUE
	COLOR_5=$MAGENTA
	COLOR_6=$BRIGHT_MAGENTA
	COLOR_7=$BRIGHT_WHITE
	BG_COLOR_0=$BG_BLACK
	BG_COLOR_1=$BG_BRIGHT_BLACK
	BG_COLOR_2=$BG_WHITE
	BG_COLOR_3=$BG_BRIGHT_WHITE
	BG_COLOR_4=$BG_BRIGHT_BLUE
	BG_COLOR_5=$BG_MAGENTA
	BG_COLOR_6=$BG_BRIGHT_MAGENTA
	BG_COLOR_7=$BG_BRIGHT_WHITE
fi
